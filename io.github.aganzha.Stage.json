{
   "app-id": "io.github.aganzha.Stage",
   "runtime": "org.gnome.Platform",
   "runtime-version": "48",
   "sdk": "org.gnome.Sdk",
   "sdk-extensions": [
      "org.freedesktop.Sdk.Extension.rust-stable"
   ],
   "command": "stage",
   "finish-args": [
      "--filesystem=home",
      "--share=ipc",
      "--share=network",
      "--socket=fallback-x11",
      "--socket=wayland",
      "--socket=ssh-auth",
      "--socket=gpg-agent",
      "--device=dri"
   ],
   "build-options": {
      "append-path": "/usr/lib/sdk/rust-stable/bin"
   },
   "modules": [{
      "name": "stage",
      "buildsystem": "meson",
      "sources": [
         {
            "type": "git",
            "url": "https://github.com/aganzha/stage.git",
            "tag": "0.1.21"
         },
         "io.github.aganzha.Stage.cargo-sources.json"
      ]
   }]
}
